model User {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  firstName      String
  lastName       String
  email          String   @unique
  hashedPassword String?

  // courses  UserCourse[]
  tokens   Token[]
  sessions Session[]
}

